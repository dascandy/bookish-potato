#pragma once

#include <vector>
#include <utility>

template <typename K, typename V>
class flatmap : private s2::vector<std::pair<const K, V>> {
public:
  typedef typename s2::vector<std::pair<const K, V>>::iterator iterator;
  typedef typename s2::vector<std::pair<const K, V>>::const_iterator const_iterator;
  using s2::vector<std::pair<const K, V>>::begin;
  using s2::vector<std::pair<const K, V>>::end;
  using s2::vector<std::pair<const K, V>>::size;
  V &operator[](const K &key) {
    for (std::pair<const K, V> &p : *this) {
      if (p.first == key) return p.second;
    }
    this->push_back(std::pair<const K, V>(key, V()));
    return this->back().second;
  }
  template <typename P>
  void insert(const P & p) {
    (*this)[p.first] = p.second;
  }
  iterator find(const K &k) {
    auto it = this->begin();
    while (it != this->end()) {
      if (it->first == k) break;
      ++it;
    }
    return it;
  }
  const_iterator find(const K &k) const {
    auto it = this->begin();
    while (it != this->end()) {
      if (it->first == k) break;
      ++it;
    }
    return it;
  }
};


